<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_preview_background_color"
    tools:context=".Manager.Products.ProductPreviewActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cvPreviewBottom"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleEnabled="false"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="false" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tvProductPreviewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:text="Saat"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tvProductPreviewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvProductPreviewTitle"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="150 TL"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvProductPreviewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tvProductPreviewTitle"
                        android:layout_alignBottom="@id/tvProductPreviewTitle"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/tvProductPreviewTitle"
                        android:paddingTop="6dp"
                        android:text="-(Yeni) - (Az Kullanılmış)"
                        android:textColor="@color/colorDarkGray" />

                    <ImageView
                        android:id="@+id/btPreviewLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:paddingTop="5dp"
                        android:paddingEnd="20dp"
                        android:src="@drawable/preview_like_button" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvProductPreviewDescriptionConstTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Kullanıcı Açıklaması"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvProductPreviewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvProductPreviewDescriptionConstTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="20dp"
                        android:text="Kullanıcı Açıklaması"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProductPreviewProfilePicture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile_picture_png" />

                    <TextView
                        android:id="@+id/ivProductPreviewProfileName"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/ivProductPreviewProfilePicture"
                        android:text="Onur Koldere"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/rbPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivProductPreviewProfileName"
                        android:layout_alignStart="@id/ivProductPreviewProfileName"
                        android:layout_marginTop="5dp"
                        app:srb_borderColor="@color/colorDarkYellow"
                        app:srb_fillColor="@color/colorDarkYellow"
                        app:srb_isIndicator="true"
                        app:srb_numberOfStars="5"

                        app:srb_rating="3"
                        app:srb_starSize="15dp"
                        app:srb_stepSize="0.5" />

                    <TextView
                        android:id="@+id/tvProductPreviewRateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/rbPreview"
                        android:layout_alignBottom="@id/rbPreview"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/rbPreview"
                        android:gravity="center_vertical"
                        android:text="(12)"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btFollow"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/follow_btn_background"
                        android:singleLine="true"
                        android:text="@string/follow"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        app:backgroundTint="@null" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:id="@+id/btPreviewReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/textReportUser"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@id/textReportUser"
                        android:src="@drawable/preview_unliked_png" />

                    <TextView
                        android:id="@+id/textReportUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/report_user"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/btBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/preview_back_png"/>
    <ImageView
        android:id="@+id/btShare"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/preview_share_png"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvPreviewBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btHello"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/example_message_button_bg"
                        android:singleLine="true"
                        android:text="@string/hello"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:backgroundTint="@null" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btWantToExchange"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/example_message_button_bg"
                        android:singleLine="true"
                        android:text="@string/wantToExchange"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:backgroundTint="@null" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btIsExist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/example_message_button_bg"
                        android:singleLine="true"
                        android:text="@string/isExist"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:backgroundTint="@null" />

                </LinearLayout>


            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/editable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:alpha="0.25"
                android:background="@drawable/preview_message_layout_background">

                <EditText
                    android:id="@+id/etMessageBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/btSendMessage"
                    android:layout_alignBottom="@id/btSendMessage"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Mesaj Yaz.."
                    android:paddingStart="20dp"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btSendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/send_message_button_bg"
                    android:singleLine="true"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:backgroundTint="@null" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>