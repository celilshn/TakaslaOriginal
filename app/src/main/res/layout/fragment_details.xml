<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct.Fragments.DetailsFragment">

    <LinearLayout
        android:id="@+id/details_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorDarkYellow"
        android:orientation="horizontal"
        android:weightSum="9">

        <ImageView
            android:id="@+id/details_top_bar_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/topbar_back_arrow_png"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/details_top_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:scaleType="center"
            android:text="@string/details_of_product"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/details_top_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/menu_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/details_product_status"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:text="@string/status_of_product"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unlem_png" />

            </RelativeLayout>

            <RadioGroup
                android:id="@+id/details_status_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_product_status"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp">

                <RadioButton
                    android:id="@+id/rbNew"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_btn_radio"
                    android:button="@android:color/transparent"
                    android:drawableStart="@drawable/new_smile_png"
                    android:paddingStart="20dp"
                    android:paddingEnd="50dp"
                    android:text="@string/newWord"
                    android:textAlignment="center"
                    android:textColor="@color/details_radiobutton_unselected_text_color" />

                <RadioButton
                    android:id="@+id/rbLil"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_btn_radio"
                    android:button="@android:color/transparent"
                    android:drawableStart="@drawable/lil_smile_png"
                    android:paddingStart="20dp"

                    android:paddingEnd="50dp"
                    android:text="@string/lilUsed"
                    android:textAlignment="center"
                    android:textColor="@color/details_radiobutton_unselected_text_color" />

                <RadioButton
                    android:id="@+id/rbUsed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_btn_radio"
                    android:button="@android:color/transparent"
                    android:drawableStart="@drawable/lil_smile_png"
                    android:paddingStart="20dp"
                    android:paddingEnd="50dp"
                    android:text="@string/used"
                    android:textAlignment="center"
                    android:textColor="@color/details_radiobutton_unselected_text_color" />
            </RadioGroup>

            <!--Title -->
            <RelativeLayout
                android:id="@+id/details_product_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/details_status_rg"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:text="@string/title_of_product"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unlem_png" />

            </RelativeLayout>

            <EditText
                android:id="@+id/etTitleProduct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/details_product_title"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/details_radio_button_unselected_bg"
                android:maxLines="1"
                android:paddingStart="25dp"

                android:singleLine="true" />
            <!--Title -->

            <!--Description -->
            <RelativeLayout
                android:id="@+id/details_product_description"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/etTitleProduct"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:text="@string/description_of_product"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/description_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unlem_png" />

            </RelativeLayout>

            <EditText
                android:id="@+id/etDescriptionProduct"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_below="@id/details_product_description"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/details_radio_button_unselected_bg"
                android:gravity="top"
                android:maxLength="250"
                android:paddingStart="25dp"
                android:paddingTop="10dp" />
            <!--Description -->

            <!--Price -->
            <RelativeLayout
                android:id="@+id/details_product_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/etDescriptionProduct"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:id="@+id/tvPriceProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:text="@string/price_of_product"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/price_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unlem_png" />

            </RelativeLayout>

            <EditText
                android:id="@+id/etPriceProduct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/details_product_price"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"

                android:background="@drawable/details_radio_button_unselected_bg"
                android:inputType="number"
                android:paddingStart="25dp"
                android:singleLine="true" />
            <!--Price -->

            <!--Exchange -->
            <TextView
                android:id="@+id/tvExchangeProduct"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/etPriceProduct"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:text="@string/exhange_of_product"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rlExchangeLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tvExchangeProduct"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:id="@+id/tvExchangerProductInner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/details_radio_button_unselected_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="25dp"
                    android:text="@string/pricable"
                    android:textColor="@color/colorPrimary50"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/rgExchange"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/exhange_rg_background"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_close_for_exchange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"

                        android:layout_weight="1"
                        android:button="@drawable/exchange_rb_background"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_open_for_exchange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"

                        android:layout_weight="1"
                        android:button="@drawable/exchange_rb_background" />
                </RadioGroup>


            </RelativeLayout>
            <!--Exchange -->


            <!--Place -->
            <RelativeLayout
                android:id="@+id/details_product_place"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/rlExchangeLayout"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:text="@string/place_of_product"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unlem_png" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPlaceLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/details_product_place"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/details_radio_button_unselected_bg">

                <TextView
                    android:id="@+id/tvPlace"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="50dp"
                    android:text="@string/choose_a_location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_outline_location_on_24" />


            </RelativeLayout>
            <!--Place -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btConfirmProduct"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_below="@id/rlPlaceLayout"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/add_product_button_bg"
                android:singleLine="true"
                android:text="@string/confirm_product"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:backgroundTint="@null" />
        </RelativeLayout>
    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.WanderingCubes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorDarkYellow" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spin_kit"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        app:progress_current="0"
        app:progress_max="100"
        app:progress_reached_bar_height="3dp"
        app:progress_reached_color="@color/colorPrimary"

        app:progress_text_color="@color/colorDarkYellow"
        app:progress_text_offset="2dp"
        app:progress_text_size="15sp"
        app:progress_text_visibility="visible"

        app:progress_unreached_bar_height="1dp"
        app:progress_unreached_color="@color/colorDarkYellow" />
</RelativeLayout>