<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/details_bottom_sheet_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="9">

        <ImageView
            android:id="@+id/details_top_bar_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/capture_top_bar_x_button"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/details_top_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:scaleType="center"
            android:text="@string/place_of_product"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <fragment android:id="@+id/autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_bottom_sheet_top_bar"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        />
<com.google.android.libraries.maps.MapView
    android:id="@+id/mapview"
    android:layout_below="@id/details_bottom_sheet_top_bar"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_width="match_parent"
    android:layout_height="400dp"/>

    <LinearLayout
        android:layout_below="@id/mapview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:gravity="center"
        android:paddingBottom="20dp">
    <com.google.android.material.button.MaterialButton
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/add_product_button_bg"
        android:text="@string/confirm_location"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:backgroundTint="@null"
/>
    </LinearLayout>
</RelativeLayout>