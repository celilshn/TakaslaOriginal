<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDarkYellow"
    android:paddingBottom="100dp"
    tools:context=".Manager.Profile.SettingsFragment">


        <ImageView
            android:id="@+id/settings_top_bar_back_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:scaleType="center"
            android:src="@drawable/topbar_back_arrow_png"
            app:tint="@color/colorPrimary" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile_picture_png"
        android:layout_below="@id/settings_top_bar_back_button"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_photo_icon"
        android:layout_alignTop="@id/ivProfilePicture"
        android:layout_alignEnd="@id/ivProfilePicture"
        android:paddingTop="3dp"
        android:paddingEnd="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/ivProfilePicture"
        android:layout_height="match_parent"
        android:layout_above="@id/ibSave"
        android:weightSum="5"
        android:orientation="vertical">
        
        <RelativeLayout
            android:id="@+id/rlNameSurname"
            android:layout_width="match_parent"
            android:background="@drawable/item_background"
            android:layout_marginBottom="20dp"
            android:layout_height="0dip"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivAccount"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/account_png"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNameSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ivAccount"
                app:hintTextColor="@color/colorPrimary"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNameSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="@string/name_surname_caps_false"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEMail"
            android:layout_width="match_parent"
            android:background="@drawable/item_background"
            android:layout_marginBottom="20dp"
            android:layout_height="0dip"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivEmail"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/email_png"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ivEmail"
                app:hintTextColor="@color/colorPrimary"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="@string/email_caps_false"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlChangePassword"
            android:layout_width="match_parent"
            android:background="@drawable/item_background"
            android:layout_marginBottom="20dp"
            android:layout_height="0dip"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivPassword"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/key_png"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLocation"
            android:layout_width="match_parent"
            android:background="@drawable/item_background"
            android:layout_marginBottom="20dp"
            android:layout_height="0dip"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivLocation"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/location_png"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNotification"
            android:layout_width="match_parent"
            android:background="@drawable/item_background"
            android:layout_marginBottom="20dp"
            android:layout_height="0dip"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivNotification"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/notification_png"/>

        </RelativeLayout>

        
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/ibSave"
        android:layout_width="140dp"
        android:layout_height="45dp"
        app:icon="@drawable/save_icon_settings"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/save_settings_button_background"
        app:backgroundTint="@null"/>
</RelativeLayout>