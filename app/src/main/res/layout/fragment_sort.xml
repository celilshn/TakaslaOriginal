<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddProduct.Fragments.SortFragment">

    <ImageView
        android:id="@+id/ivPreviewImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        />

    <cn.cyan.dragrecyclerview.DragRecyclerView
        android:id="@+id/drv"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/sort_bottom_bar"
        android:layout_below="@id/ivPreviewImage"/>
    <LinearLayout
        android:id="@+id/sort_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/menu_background"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/rlBackButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivBackArrow"
                app:tint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow_png"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"

                />
            <TextView
                android:id="@+id/tvNextText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/back"
                android:textColor="@color/capture_topbar_text_color"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/ivBackArrow"
                android:textSize="15sp"/>


        </RelativeLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </View>

        <RelativeLayout
            android:id="@+id/rlNextButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivNextArrow"
                app:tint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_arrow_png"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/contunue"
                android:textColor="@color/capture_topbar_text_color"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ivNextArrow"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"/>


        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>